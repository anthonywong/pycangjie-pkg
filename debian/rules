#!/usr/bin/make -f

# Uncomment this to turn on verbose mode.
#export DH_VERBOSE=1

%:
	dh $@  --with autotools-dev,python3

override_dh_auto_configure:
	./autogen.sh
	dh_auto_configure

override_dh_auto_install:
	dh_auto_install

	# Removing unused files
	find debian/python3-pycangjie/usr/lib -name '*.la' -exec rm '{}' \;
